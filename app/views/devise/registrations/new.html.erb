<div class="panel panel-default col-sm-4 col-sm-offset-4" style="padding-left: 0px; padding-right: 0px;">
  <div class="panel-heading center">
    <h1> Please sign up</h1>
  </div>

  <div class="panel-body" style="margin-left: 15px; margin-right: 15px;">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class= "row">
        <div class="form-group" >
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, class: "form-control center", placeholder:"Email address", autofocus: true %>
        </div>
      </div>

      <div class= "row">
        <div class="form-group" >
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, class: "form-control center", placeholder:"Password (#{@minimum_password_length} characters minimum)", autocomplete: "off" %>
        </div>
      </div>

      <div class= "row">
        <div class="form-group">
          <%= f.label :password_confirmation, class: "sr-only" %>
          <%= f.password_field :password_confirmation, class: "form-control center", placeholder:"Password confirmation", autocomplete: "off" %>
        </div>
      </div>

      <div class="row">
        <div class="actions" >
          <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="panel-footer">
   or <%= render "devise/shared/links" %>
  </div>
</div>