<h1>Listing devices</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <% if device.user == current_user %>
      <tr>        
        <td><%= device.name %></td>
        <td>
          <form id="nigForm" class="form-inline" action="/testsend" method="post">
            <div class="form-group">
              <%# TODO:fix this "hidden" %>
              <input type="hidden" name="deviceID" id= "deviceID" value= "<%= device.regID%>">
              <input type="text" class="form-control" id="urlImage" placeholder="Url image">
            </div>
            <button type="submit" class="btn btn-default">Nig It!</button>
          </form>          
        </td>
        <td>
          <%= link_to edit_device_path(device) do %>
            Edit <span class="glyphicon glyphicon-edit"></span>  
          <% end %>
        </td>
        <td>  
          <%= link_to device, method: :delete, data: { confirm: 'Are you sure?' } do %>
            Delete <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Device', new_device_path %>
<% end %>